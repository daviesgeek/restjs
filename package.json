    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.5.0",
    "jsdoc": "^3.4.0",
    "json": "^9.0.4",
    "karma": "^0.13.22",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sinon": "^1.0.5",
    "mocha": "^2.5.3",
